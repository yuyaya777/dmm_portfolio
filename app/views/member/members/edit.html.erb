<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>ユーザー情報</h2>
    <%= render 'layouts/errors', obj: @member %>
    <%= form_with model:@member, url: member_member_path(@member), method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :ユーザー名 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :プロフィール画像 %>
        <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.label :自己紹介文 %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "プロフィール更新", class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
