<table class='table table-hover table-inverse'>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, member_post_path(post) %></td>
        <td><%= post.body %></td>
        <td class="comments-count">コメント数: <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>