<div class="container">
  <h2>質問投稿編集</h2>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @post, url: member_post_path(@post), method: :patch, local:true do |f| %>
      <div class="form_group row">
        <%= f.label :"質問カテゴリー", class: "col-4" %>
        <%= f.collection_select :category_id, @categories, :id, :category_name, prompt: "-- 選択して下さい --", class: "col-8" %>
      </div>
      <div class="form_group row">
        <%= f.label :"質問タイトル", class: "col-4" %>
        <%= f.text_field :title, class: "col-7" %>
      </div>
      <div class="form_group row">
        <%= f.label :"質問内容", class: "col-4" %>
        <%= f.text_area :body, class: "col-7" %>
      </div>
      <div class="form_group row">
        <%= f.label :"画像", class: "col-4" %>
        <%= f.attachment_field :post_image, class: "col-8" %>
      </div>
      <div class="col-12 text-center">
        <%= f.submit "更新する", class: "btn btn-success" %>
      </div>
      <% end %>
      <div class="col-12 text-center">
        <%= link_to "削除する", member_post_path(@post), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>