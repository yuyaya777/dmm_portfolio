<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>質問投稿編集画面</h2>
    <%= render 'layouts/errors', obj: @post %>

    <%= form_with model: @post, url: member_post_path(@post), method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= f.label :質問カテゴリー（必須） %><br>
        <%= f.collection_select :category_id, Category.all, :id, :category_name, prompt: "-- 選択して下さい --" %>
      </div>
     <div class="form-group">
        <%= f.label :質問タイトル（必須） %>
        <%= f.text_field :title, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :質問内容（必須） %>
        <%= f.text_area :body, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.label :質問画像 %>
        <%= f.attachment_field :post_image, class: "form-control-file user_image" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新する", class: 'btn btn-success' %>
        <%= link_to "削除する", member_post_path(@post), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
</div>