<div class="col-6", style="padding:10px; margin:10px;">
  <h2>新規登録画面</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "members/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :ユーザー名, class: "col-3" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス, class: "col-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード, class: 'col-3' %>
      <%= f.password_field :password, autocomplete: "new-password",placeholder: "６文字以上" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用）, class: 'col-3' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "col-2 btn btn-success" %>
    </div>
  <% end %>

  <h3>既に登録済みの方</h3>
    <%= link_to 'こちら', new_member_session_path %>　からログインしてください
</div>