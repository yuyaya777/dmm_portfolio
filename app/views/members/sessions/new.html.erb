<div class="col-6">
  <h2>ログイン画面</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス, class: 'col-3' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード, class: 'col-3' %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'col-3' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary col-2' %>
    </div>
  <% end %>

    <div class="mt-5">
      <h3>会員登録がお済でない方</h3>
      <p><%= link_to 'こちら', new_member_registration_path %> から新規登録を行ってください</p>
    </div>
</div>
